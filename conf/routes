# Definici√≥n de rutas para el portal de noticias
GET     /       controllers.HomeController.index

GET     /register           controllers.AuthController.register()
GET     /login                      controllers.AuthController.login()
POST    /login                      controllers.AuthController.autenticar()
GET   /auth/crearUsuarioPrueba   controllers.AuthController.crearUsuarioPrueba
POST  /auth/registrar   controllers.AuthController.registrarUsuario

# Obtener noticias externas
GET     /noticias              controllers.NoticiasController.obtenerNoticias



GET     /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)

GET     /articulos          controllers.ArticulosController.obtenerArticulos
POST    /articulos          controllers.ArticulosController.agregarArticulo